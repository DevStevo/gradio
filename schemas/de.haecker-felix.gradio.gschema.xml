<schemalist>
  <schema id="de.haecker-felix.gradio" path="/de/haecker-felix/gradio/" gettext-domain="gradio">
    <key name="search-results-list-length" type="i">
      <default>25</default>
      <summary>Set the length of the result list</summary>
    </key>

    <key name="only-show-working-stations" type="b">
      <default>true</default>
      <summary>Only show working radio stations</summary>
    </key>

    <key name="use-dark-design" type="b">
      <default>false</default>
      <summary>Dark design of the user interface</summary>
    </key>

    <key name="show-notifications" type="b">
      <default>true</default>
      <summary>Show notifications (play/stop etc.)</summary>
    </key>

  </schema>
</schemalist>
